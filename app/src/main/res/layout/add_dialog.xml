<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="31dp"
        android:paddingRight="30dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etAddWriter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/etAddYear"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-smallcaps"
            android:hint="Writen By"
            android:gravity="center"

            android:inputType="textPersonName"
            android:textSize="19sp"
            android:ems="10"
            />

        <EditText
            android:id="@+id/etAddYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:hint="year"
            android:inputType="number"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/etAddLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:ems="10"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:hint="Link"
            android:inputType="textPersonName"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/etAddName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:hint="Article Name"
            android:inputType="textPersonName"
            android:textSize="19sp" />


        <Spinner
            android:id="@+id/spLanguages"
            android:layout_width="228dp"
            android:layout_height="43dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/btnAddSource"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:layout_below="@+id/etAddLink"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_backgorund"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Add"
            android:textColor="#fff" />
    </LinearLayout>
</RelativeLayout>