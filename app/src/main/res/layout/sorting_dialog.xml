<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnSortWriter"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/btnSortABC"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_backgorund"
        android:fontFamily="sans-serif-smallcaps"
        android:text="By writer"
        android:textColor="#fff"
        />

    <Button
        android:id="@+id/btnSortABC"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:background="@drawable/button_backgorund"
        android:fontFamily="sans-serif-smallcaps"
        android:text="By ABC"
        android:textColor="#fff"
        />

    <Button
        android:id="@+id/btnSortYear"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/btnSortWriter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_backgorund"
        android:fontFamily="sans-serif-smallcaps"
        android:text="By year"
        android:textColor="#fff"
        />

    <Button
        android:id="@+id/btnSortLanguage"
        android:layout_width="195dp"
        android:layout_height="40dp"
        android:layout_below="@+id/btnSortYear"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_backgorund"
        android:textColor="#fff"
        android:fontFamily="sans-serif-smallcaps"
        android:text="By Language" />
</RelativeLayout>