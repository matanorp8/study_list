<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Second">


    <EditText
        android:id="@+id/multiText"
        android:layout_width="370dp"
        android:layout_height="180dp"
        android:layout_above="@+id/btnBack"
        android:layout_below="@+id/wvSource"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="10dp"
        android:gravity="left"
        android:hint="write your remarks here..."
        android:fontFamily="sans-serif-smallcaps"
        android:inputType="textMultiLine" />

    <WebView
        android:id="@+id/wvSource"
        android:layout_width="370dp"
        android:layout_height="220dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="51dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="back"
        android:background="@drawable/button_backgorund"
        android:textColor="#fff"
        />

    <Button
        android:id="@+id/btnSite"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:background="@drawable/button_backgorund"
        android:textColor="#fff"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="41dp"
        android:layout_marginBottom="10dp"

        android:fontFamily="sans-serif-smallcaps"
        android:text="enter site" />
</RelativeLayout>